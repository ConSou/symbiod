%h2= t('dashboard.candidates.title')

.table-responsive
  %table.table.table-striped.table-sm
    %thead
      %tr
        %th #
        %th Email
        %th= t('dashboard.candidates.primary_skill')
    %tbody
      - @candidates.each do |candidate|
        %tr
          %td= candidate.id
          %td= link_to candidate.email, dashboard_test_task_assignment_url(candidate)
          %td= candidate.primary_skill.title

